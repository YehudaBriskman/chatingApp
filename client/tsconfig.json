{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "lib": ["DOM", "ESNext"],
      "allowJs": false,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Node",
      "jsx": "react-jsx"
    },
    "include": ["src"]
  }